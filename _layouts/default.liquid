<!doctype html>
<html lang="{{ site.lang }}" dir="{% if site.lang == 'ar' %}rtl{% else %}ltr{% endif %}">
  <!-- Head -->
  <head>
    {% if page.redirect %}
      {% if page.redirect == true %}
        {% assign redirect = site.baseurl | append: '/' %}
      {% elsif page.redirect contains '://' %}
        {% assign redirect = page.redirect %}
      {% else %}
        {% assign redirect = page.redirect | relative_url %}
      {% endif %}
      <meta http-equiv="refresh" content="3; url={{ redirect }}">
    {% endif %}
    {% include head.liquid %}
    <style>
      /* Conditional RTL styles */
      {% if site.lang == 'ar' %}
      body, h1, h2, h3, p, nav, div {
        text-align: right;
      }
      {% endif %}
    </style>
  </head>

  <!-- Body -->
  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    <!-- Header -->
    {% include header.liquid %}

    <!-- Content -->
    <div class="container mt-5" role="main">
      {% if page.toc and page.toc.sidebar %}
        <!-- Conditionally render sidebar based on language and sidebar position -->
        {% if site.lang == 'ar' %}
          <!-- If RTL, swap columns for toc -->
          <div class="row">
            <div class="col-sm-9">{{ content }}</div>
            <div class="col-sm-3">
              <nav id="toc-sidebar" class="sticky-top"></nav>
            </div>
          </div>
        {% else %}
          {% if page.toc.sidebar == 'right' %}
            <div class="row">
              <div class="col-sm-9">{{ content }}</div>
              <div class="col-sm-3">
                <nav id="toc-sidebar" class="sticky-top"></nav>
              </div>
            </div>
          {% else %}
            <div class="row">
              <div class="col-sm-3">
                <nav id="toc-sidebar" class="sticky-top"></nav>
              </div>
              <div class="col-sm-9">{{ content }}</div>
            </div>
          {% endif %}
        {% endif %}
      {% else %}
        {{ content }}
      {% endif %}
    </div>

    <!-- Footer -->
    {% include footer.liquid %}

    <!-- JavaScripts -->
    {% include scripts/... %}
  </body>
</html>
